<div class="container">
  <div class="robot card">
    <div class="robot-details">
      <h3><%= @robot.name %></h3>
      <p><%= @robot.functions %></p>
      <p><%= @robot.caracteristics %></p>
    </div>
    <div class="robot-picture-bouton">
      <%= image_tag "BB-8_Clean_legal_line_1024x1024.jpg", id: "robot-picture" %>
      <div class="price-and-button">
        <p><%= @robot.price %></p>
        <a href="#" class="btn btn-info">Book me</a>
      </div>
    </div>
  </div>
  <div>formulaire saisi avec un collapse sur le bouton "Book me"
    <%= simple_form_for [@robot, @booking] do |f| %>
      <%= f.input :beginning_of_rental %>
      <%= f.input :end_of_rental %>
      <%= f.submit "book my robot", class: "btn btn-primary" %>
    <%= end %>
  </div>
  <div>
    <div>Reviews</div>
    <div>Reviews'cards</div>
  </div>
</div>

